{
    "restart_log" : true,
    "engine" : {
        "type" : "sim",
        "start_time" : "now",
        "end_time" : "+PT60M"
    },
    "events" : [
        {
            "action" : { "client.delete_all_filters" : {} },
            "action" :
            {
                "client.create_filters" : [
                    {
                        "$description" : "Down (test)",
                        "where" : "$ts < ago(120)", // Timeout at 2 minutes
                        "monitor" : true,
                        "action" : {
                            "$description": "Notify Synth of timeout (test)",
                            "body": "{\n\"deviceId\" : \"{device.$id}\",\n\"eventName\" : \"notifyTimeout\"\n}",
                            "headers": {
                                "Instancename": "<<<instance_name>>>",
                                "Key": "<<<web_key>>>"
                            },
                            "method": "POST",
                            "target": "request",
                            "url": "https://synth.devicepilot.com/event"
                        }
                    }
                ]
            }
        },
        {
            "at" : "PT0S",
            "repeats" : 500,
            "interval" : "PT0S",
            "comment" : "A device with periodic comms outages",
            "action": {
                "create_device" : {
                    "functions" : {
                        //"variable" : {
                        //    "name" : "count",
                        //    "timefunction" : {
                        //        "count" : {
                        //            "interval" : "PT10S"
                        //        }
                        //    }
                        "heartbeat" : {
                            "interval" : "PT60S"
                        },
                        "commswave" : {
                            "timefunction" : {
                                "pulsewave" : {
                                    "interval" : "PT10M",
                                    "transition" : "PT2M",
                                    "invert" : true,
                                    "comment" : "Send heartbeats for 2 minutes, then timeout"
                                }
                            }
                        },
                        "expect" : {
                            "event_name" : "notifyTimeout",
                            "timefunction" : {
                                "pulsewave" : {
                                    "interval" : "PT10M",
                                    "transition" : "PT4M",
                                    "comment" : "Expect a timeout after 4 minutes"
                                }
                            },
                            "ignore_start" : "PT2M",
                            "required_score_percent" : 100
                        }
                    }
                }
            }
        },
        {
            "at" : "PT0S",
            "comment" : "A device that's always posting, to keep DP now() moving forwards",
            "action": {
                "create_device" : {
                    "functions" : {
                        // "variable" : {
                        //     "name" : "count",
                        //     "timefunction" : {
                        //         "count" : {
                        //             "interval" : "PT10S"
                        //         }
                        //     }
                        "heartbeat" : {
                            "interval" : "PT10S"
                        }
                    }
                }
            }
        }
    ]
}
